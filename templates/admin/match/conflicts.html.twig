{% extends 'base.html.twig' %}

{% block title %}Admin - Conflits{% endblock %}

{% block body %}
<h1>Matchs en conflit</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Joueur 1</th>
            <th>Joueur 2</th>
            <th>Round</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for match in matches %}
        <tr>
            <td>{{ match.playerOne.email }}</td>
            <td>{{ match.playerTwo.email }}</td>
            <td>{{ match.round }}</td>
            <td>
                <a href="{{ path('admin_match_validate', {id: match.id}) }}" class="btn btn-success btn-sm">
                    Forcer validation
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun conflit</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('admin_matches_index') }}" class="btn btn-secondary">Retour</a>
{% endblock %}
