{% extends 'base.html.twig' %}

{% block title %}Ajouter un match{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">➕ Ajouter un match</h5>
            </div>

            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.playerOne, null, {
                        label_attr: { class: 'form-label fw-bold' }
                    }) }}
                    {{ form_widget(form.playerOne, {
                        attr: { class: 'form-select' }
                    }) }}
                    {{ form_errors(form.playerOne) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.playerTwo, null, {
                        label_attr: { class: 'form-label fw-bold' }
                    }) }}
                    {{ form_widget(form.playerTwo, {
                        attr: { class: 'form-select' }
                    }) }}
                    {{ form_errors(form.playerTwo) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.round, null, {
                        label_attr: { class: 'form-label fw-bold' }
                    }) }}
                    {{ form_widget(form.round, {
                        attr: {
                            class: 'form-control',
                            min: 1
                        }
                    }) }}
                    {{ form_errors(form.round) }}
                </div>

                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_matches_index') }}"
                       class="btn btn-outline-secondary">
                        ← Retour
                    </a>

                    <button type="submit" class="btn btn-success">
                        Créer le match
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
</div>
{% endblock %}
