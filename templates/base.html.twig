<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Battle Arena{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">

{% if app.request.attributes.get('_route') not in ['app_login', 'app_register'] %}
    <nav class="mb-4">
        {% if app.user %}
            Connect√© : {{ app.user.email }}
            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-danger ms-2">Logout</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-sm btn-primary">Login</a>
        {% endif %}
    </nav>
{% endif %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">{{ message }}</div>
    {% endfor %}
{% endfor %}

{% block body %}{% endblock %}

</body>
</html>
