{% extends 'base.html.twig' %}

{% block title %}Tournoi{% endblock %}

{% block body %}
<h1 class="mb-4">Battle Arena – Avancement du tournoi</h1>

{% if matches is empty %}
    <div class="alert alert-info">Aucun match pour le moment.</div>
{% else %}

    {% set currentRound = null %}

    {% for match in matches %}
        {% if currentRound != match.round %}
            {% set currentRound = match.round %}
            <h2 class="mt-4">Round {{ currentRound }}</h2>
        {% endif %}

        <div class="card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <strong>{{ match.playerOne.email }}</strong>
                    <span class="mx-2">vs</span>
                    <strong>{{ match.playerTwo.email }}</strong>
                </div>

                <div class="d-flex align-items-center gap-2">
                    {% if match.status == 'scheduled' %}
                        <span class="badge text-bg-secondary">À venir</span>
                    {% elseif match.status == 'validated' %}
                        <span class="badge text-bg-success">Validé</span>
                    {% elseif match.status == 'conflict' %}
                        <span class="badge text-bg-warning">Conflit</span>
                    {% else %}
                        <span class="badge text-bg-dark">{{ match.status }}</span>
                    {% endif %}

                    {% set p1 = results[match.id][match.playerOne.id] ?? null %}
                    {% set p2 = results[match.id][match.playerTwo.id] ?? null %}

                    {% if p1 or p2 %}
                        <span class="badge text-bg-light border">
                            {% if p1 %}P1: {{ p1 }}{% else %}P1: —{% endif %}
                            |
                            {% if p2 %}P2: {{ p2 }}{% else %}P2: —{% endif %}
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}
{% endblock %}
